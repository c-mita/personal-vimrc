let s:python_26 = 26
let s:python_27 = 27
let s:python_3 = 3

command! Py26 call SetPythonVersion( s:python_26 )
command! Py27 call SetPythonVersion( s:python_27 )
command! Py3 call SetPythonVersion( s:python_3 )
command! PyR call SetPythonVersion( 0 )

function! SetPythonVersion( pVersion )
    if a:pVersion == s:python_26
        command! -nargs=* RPy call RunCommandInTerminal( "module load python/2.6.6; python %:p <args>" )
        Python2Syntax
        echo "Set to Python 2.6"
    elseif a:pVersion == s:python_27
        command! -nargs=* RPy call RunCommandInTerminal( "module load python/2.7; python %:p <args>" )
        Python2Syntax
        echo "Set to Python 2.7"
    elseif a:pVersion == s:python_3
        command! -nargs=* RPy call RunCommandInTerminal( "module load python/3.2.2; python3 %:p <args>" )
        Python3Syntax
        echo "Set to Python 3.2"
    else
        command! -nargs=* RPy call RunCommandInTerminal( "python %:p <args" )
        echo "Unknown parameter - Set to default Python version"
    endif
endfunction

command! -nargs=* TPy !echo "bash -c 'cd %:p:h; python %:p <args>; read'"

function RunCommandInTerminal( commandToRun )
    let l:commandString = "silent !gnome-terminal -e \"bash -c '\cd %:p:h;" . a:commandToRun . "; read\'\""
    exec l:commandString
    redraw!
endfunction

command! -nargs=* RPy call RunCommandInTerminal( "python %:p <args>" )
